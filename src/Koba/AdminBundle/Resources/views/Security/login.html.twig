{% extends "KobaAdminBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form class="form-signin form-horizontal" role="form"
        action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

    <h2 class="form-signin-heading">{{ 'security.login.request'|trans({}, 'KobaAdminBundle') }}</h2>

    <div class="form-group">
      <label for="username"
             class="col-sm-2 control-label">{{ 'security.login.username'|trans({}, 'KobaAdminBundle') }}</label>

      <div class="col-sm-10">
        <input type="text" placeholder="{{ 'security.login.username'|trans({}, 'KobaAdminBundle') }}" class="form-control"
               id="username" name="_username" value="{{ last_username }}"
               required="required"/>
      </div>
    </div>
    <div class="form-group">
      <label for="password"
             class="col-sm-2 control-label">{{ 'security.login.password'|trans({}, 'KobaAdminBundle') }}</label>

      <div class="col-sm-10">
        <input type="password" placeholder="{{ 'security.login.password'|trans({}, 'KobaAdminBundle') }}" class="form-control"
               id="password" name="_password" required="required"/>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label
          for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <button type="submit" class="btn btn-primary right" id="_submit"
                name="_submit"><i
            class="fa fa-sign-in"></i> {{ 'security.login.submit'|trans }}
        </button>
      </div>
    </div>
  </form>
{% endblock fos_user_content %}
